<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_gradient"
    android:padding="16dp"
    android:elevation="18dp"
    android:clipToOutline="true"
    android:layout_margin="8dp"
    android:outlineProvider="background"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/album_art"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/album_art_placeholder"
        android:background="@drawable/widget_album_glass"
        android:scaleType="centerCrop"
        android:elevation="10dp"
        android:layout_marginBottom="8dp"
        android:clipToOutline="true"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No song playing"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:shadowColor="#1db954"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="8" />

    <TextView
        android:id="@+id/song_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#B3FFEC"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:shadowColor="#232526"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="4" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">
        <ImageButton
            android:id="@+id/prev"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:src="@drawable/ic_prev_animated"
            android:background="@drawable/ripple_glow_bg"
            android:elevation="4dp"
            android:scaleType="centerInside"
            android:contentDescription="Previous" />
        <ImageButton
            android:id="@+id/play_pause"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1.2"
            android:src="@drawable/ic_play_animated"
            android:background="@drawable/rounded_button_accent"
            android:elevation="8dp"
            android:scaleType="centerInside"
            android:contentDescription="Play/Pause" />
        <ImageButton
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:src="@drawable/ic_next_animated"
            android:background="@drawable/ripple_glow_bg"
            android:elevation="4dp"
            android:scaleType="centerInside"
            android:contentDescription="Next" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:progress="0"
        android:max="100"
        android:progressDrawable="@drawable/progress_accent"
        android:layout_marginTop="10dp"
        android:background="@drawable/progress_bg"
        android:elevation="2dp" />
</LinearLayout>
